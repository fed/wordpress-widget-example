{
  "name": "wordpress-widget-example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.0.2",
    "react-scripts": "1.0.11",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "postbuild": "npm-run-all --parallel widget:*",
    "widget:config": "cp wordpress-widget-example.php build/wordpress-widget-example.php",
    "widget:clean": "rimraf build/index.html build/favicon.ico"
  }
}
